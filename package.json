{
  "name": "thanh-tin-landing-page",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Thành Tín - Rút Tiền & Đáo Hạn Thẻ Tín Dụng. React + Fastify SSR.",
  "scripts": {
    "dev": "tsx watch src/server/dev.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --outDir dist/server --ssr src/entry-server.tsx",
    "build:ghpages": "npm run build && tsx scripts/prerender.ts",
    "start": "NODE_ENV=production node dist/server/entry-server.js",
    "start:prod": "NODE_ENV=production tsx src/server/production.ts",
    "preview": "npm run build && npm run start:prod"
  },
  "dependencies": {
    "@fastify/compress": "^8.0.1",
    "@fastify/static": "^8.0.3",
    "fastify": "^5.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.3"
  }
}
